<domain type='xen'>
<name>rocce-vm7</name>
<bootloader>/opt/rocks/bin/rocks-pygrub</bootloader>
<bootloader_args>--hostname=rocce-vm7</bootloader_args>
<memory>1048576</memory>
<vcpu>1</vcpu>
<devices>
  <interface type='bridge'>
    <source bridge='xenbr.eth0.9'/>
    <mac address='ca:29:e4:00:00:0a'/>
    <script path='vif-bridge'/>
  </interface>
  <interface type='bridge'>
    <source bridge='xenbr.eth1'/>
    <mac address='ca:29:e4:00:00:0b'/>
    <script path='vif-bridge'/>
  </interface>
<disk type='file' device='disk'>
<driver name='file'/>
<source file='/export/images/vm-images/test/xen/bioapp5-zhengc.img'/>
<target dev='hda'/>
</disk>
<input type='mouse' bus='xen'/>
<graphics type='vnc' port='-1'/>
<console tty='/dev/pts/0'/>
</devices>
<on_poweroff>destroy</on_poweroff>
<on_reboot>restart</on_reboot>
<on_crash>preserve</on_crash>
</domain>



